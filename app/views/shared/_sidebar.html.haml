.user-info
  .user-info__user-name
    = current_user.name
  .user-info__edit-user-button
    = link_to edit_user_path(current_user) do
      = fa_icon("cog lg")
  .user-info__create-group-button
    = link_to new_group_path do
      = fa_icon("edit lg")

.group-index
  - current_user.groups.each do |group|
    .group-index__box
      = link_to group_messages_path(group) do
        .group-index__box__group-name
          = group.name
        .group-index__box__group-message
          = group.show_last_message


